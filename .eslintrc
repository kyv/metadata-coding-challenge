{
  "env": {
    "node": true,
    "es6": true,
  },
  "extends": [
    "eslint",
  ],
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "after": true,
    "before": true,
    "beforeEach": true
  },
  rules: {
    "node/no-unpublished-require": "false",
    "require-jsdoc": 'off',
    "lines-around-comment": off,
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "always-multiline"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "strict": ["error", "never"],
  },
}
